{
  "schema": {
    "http://localhost:3000/graphql": {
      "headers": {}
    }
  },
  "generates": {
    "./framework/reactioncommerce/schema.d.ts": {
      "plugins": ["typescript", "typescript-operations"],
      "config": {
        "avoidOptionals": true
      }
    },
    "./framework/reactioncommerce/schema.graphql": {
      "plugins": ["schema-ast"]
    }
  },
  "hooks": {
    "afterAllFileWrite": ["prettier --write"]
  }
}
